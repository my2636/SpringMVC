create table person (
	id serial primary key ,
	first_name varchar(40) not null,
	last_name varchar(50) not null,
	nickname varchar(20),
	email varchar(50) unique not null,
	birthday date,
	city varchar(70))

	drop table person cascade

	select * from person

create table vacation_type (
	id serial2 primary key,
	"type" varchar(15) unique not null
)

create table vacation (
	id serial2 primary key,
	user_id int2 not null references person(id) on delete cascade on update cascade,
	vacation_type_id int2 not null references vacation_type(id) on delete restrict on update cascade,
	vacation_name varchar(50) not null,
	vacation_date date not null,
	planning_status boolean not null
)

create table vacation_features (
	id serial2 primary key,
	vacation_id int2 not null references vacation(id) on delete cascade on update cascade,
	description varchar(255) not null,
	status boolean not null
)

create table vacation_todo_list (
	id serial2 primary key,
	vacation_id int2 references vacation (id) on delete cascade on update cascade
)

create table todo_list_task (
	id serial2 primary key,
	todo_list_id int2 references vacation_todo_list (id) on delete cascade on update cascade,
	description varchar(255) not null,
	status boolean not null
)
